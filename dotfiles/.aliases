alias ll="ls -la"

function gg() {
    cd $(cat ~/.gg)
}

function gs() {
    pwd > ~/.gg
}

function gl() {
    echo "Branches"
    git for-each-ref --sort='-authordate:iso8601' --format=' %(authordate:relative)%09%(refname:short)' refs/heads
    echo "Worktrees"
    git worktree list
}

alias vim=nvim
